{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.js",
    "app/capabilities/page.jsx",
    "app/careers/page.jsx",
    "app/layouJjt.jsx",
    "app/page.jsx",
    "app/sectors/page.jsx",
    "components/CaseStudies.jsx",
    "components/Footer.jsx",
    "components/Header.jsx",
    "components/Hero.jsx",
    "components/NibloSection.jsx",
    "components/ServiceArchitecture.jsx",
    "components/WhereWeFit.jsx",
    "components/WhyNGT.jsx",
    "hooks/use-mobile.jsx",
    "hooks/use-toast.js",
    "lib/utils.js",
    "next-env.d.js",
    "tailwind.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
